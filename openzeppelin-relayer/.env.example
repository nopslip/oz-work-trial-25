# OpenZeppelin Relayer Configuration for Acme Bank Crypto Bond
# Copy this file to .env and fill in your values

# Core Configuration
LOG_LEVEL=info
CONFIG_DIR=./config
CONFIG_FILE_NAME=acme-bond-relayer.json

# Security
WEBHOOK_SIGNING_KEY=monitor-relayer-secret-2025
API_KEY=demo-api-key-2025
PRIVATE_KEY=0x... # Your deployer private key (same as used for deployment)
# KEYSTORE_PASSPHRASE not needed when using raw private key

# Ethereum Sepolia RPC
SEPOLIA_RPC_URL=https://ethereum-sepolia-rpc.publicnode.com

# Contract (Deployed on Sepolia)
ACME_BOND_CONTRACT=0xB9A538E720f7C05a7A4747A484C231c956920bEf

# Rate Limiting
RATE_LIMIT_RPS=100
RATE_LIMIT_BURST_SIZE=300

# Monitoring & Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Redis Cache (optional, for production)
REDIS_URL=redis://localhost:6379
REDIS_CONNECTION_TIMEOUT_MS=10000
REDIS_KEY_PREFIX=oz-relayer

# API Configuration
RELAYER_PORT=8080
RELAYER_HOST=0.0.0.0
ENABLE_SWAGGER=true

# Timeouts
RPC_TIMEOUT_MS=10000

# Gas Configuration (wei)
MAX_GAS_PRICE=50000000000
GAS_LIMIT_DEFAULT=500000
GAS_LIMIT_INTEREST=2000000

# Signer Addresses (need roles on contract)
# Currently all roles assigned to deployer: 0xF2431c13e4240385215afA90230bbd98a98c2c4e
INTEREST_PAYER_ADDRESS=0xF2431c13e4240385215afA90230bbd98a98c2c4e
PAUSER_ADDRESS=0xF2431c13e4240385215afA90230bbd98a98c2c4e  
TREASURER_ADDRESS=0xF2431c13e4240385215afA90230bbd98a98c2c4e

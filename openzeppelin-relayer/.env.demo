# Demo Environment Configuration for Acme Bank Crypto Bond
# Copy this to .env and add your private key

# Core Configuration
LOG_LEVEL=info
CONFIG_DIR=./config
CONFIG_FILE_NAME=acme-bond-relayer.json

# Security (Demo Mode - Production would use HSM/KMS)
WEBHOOK_SIGNING_KEY=monitor-relayer-secret-2025
API_KEY=demo-api-key-2025
PRIVATE_KEY=0x... # REPLACE WITH YOUR ACTUAL PRIVATE KEY FROM DEPLOYMENT

# Ethereum Sepolia RPC
SEPOLIA_RPC_URL=https://ethereum-sepolia-rpc.publicnode.com

# Deployed Contract
ACME_BOND_CONTRACT=0xB9A538E720f7C05a7A4747A484C231c956920bEf

# API Settings
RELAYER_PORT=8080
RELAYER_HOST=0.0.0.0
ENABLE_SWAGGER=true

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090

# Rate Limiting
RATE_LIMIT_RPS=100
RATE_LIMIT_BURST_SIZE=300

# Timeouts
RPC_TIMEOUT_MS=10000

# Gas Settings (wei)
MAX_GAS_PRICE=50000000000
GAS_LIMIT_DEFAULT=500000
GAS_LIMIT_INTEREST=2000000

# Redis (optional - comment out if not using)
# REDIS_URL=redis://localhost:6379
# REDIS_CONNECTION_TIMEOUT_MS=10000
# REDIS_KEY_PREFIX=oz-relayer